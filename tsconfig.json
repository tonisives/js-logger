{
  "compilerOptions": {
    "target": "es2022",
    "module": "NodeNext",
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "NodeNext",
    "declaration": true,
  },
  "exclude": [
    "vitest.config.ts",
    "dist",
    "tmp",
    "**/*.test.ts"
  ]
}